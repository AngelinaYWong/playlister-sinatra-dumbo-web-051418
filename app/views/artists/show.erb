<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Songs</h1>
    <ul>
      <% @artist.songs.each do |song| %>
        <li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
      <% end %>
    </ul>
    <h1>Genres</h1>
    <ul>
      <% @artist.genres.each do |genre| %>
        <li><a href="/genres/<%= genre.slug %>"><%= genre.name %></li>
      <% end %>
    </ul>
  </body>
</html>
